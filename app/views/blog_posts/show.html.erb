<div class="prose prose-stone mx-auto">
  <% if user_signed_in? %>
    <%#= link_to "Profile", edit_user_registration_path %>
    <%= link_to "Edit Post", edit_blog_post_path(@blog_post) %>
      <%= link_to "Delete Post",
      blog_post_path(@blog_post),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete?"}
    %>
  <% end %>
  <div>
    <%= image_tag @blog_post.cover_image if @blog_post.cover_image.present? %>
    <h3><%= @blog_post.title %></h3>
    <p><%= @blog_post.content %></p>
  </div>
</div>
