<h1>Index</h1>
<div class="container ">
  <div class="prose mx-auto">
    <% @blog_posts.each do |post| %>
      <div class="border-solid border-2 border-stone-400 my-2 shadow-md rounded p-2 mx-3">
        <%= image_tag post.cover_image if post.cover_image.present? %>
        <h3><%= link_to post.title, post%></h3>
        <% if post.draft? %>
        <div class="p-2 rounded bg-gray-100 text-gray-900">Draft</div>
        <% elsif post.scheduled? %>
        <div class="p-2 rounded bg-blue-100 text-blue-900">Scheduled</div>
        <% end %>
        <p><%= post.content %></p>
      </div>
    <% end %>
  </div>
  <% if @pagy.count > @pagy.items %>
    <div class="mx-auto my-16 flex justify-center">
      <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
    </div>
  <% end %>
</div>
